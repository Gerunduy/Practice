<Window x:Class="ExpertiseWPFApplication.ProjectCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertiseWPFApplication"
        mc:Ignorable="d"
        Title="ProjectCard" Height="475" Width="487" MaxHeight="500">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>


        </Grid.ColumnDefinitions>


        <Label x:Name="label" Grid.Column="0" Content="Наименование проекта" Margin="10,26,0,0" HorizontalAlignment="Left" Width="140" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="label1" Grid.Column="0" Content="Руководитель проекта" HorizontalAlignment="Left" Margin="10,52,0,0" Height="26" VerticalAlignment="Top"/>

        <Border x:Name="border" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="17,114,10,0" Height="81" VerticalAlignment="Top">
            <ScrollViewer  VerticalScrollBarVisibility="Visible">
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Top"  Width="311" Height="79"/>
            </ScrollViewer>
        </Border>
        <Label x:Name="label2" Grid.Column="0" Content="Авторский коллектив" HorizontalAlignment="Left" Margin="10,83,0,0" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="label3" Grid.Column="0" Content="Область знаний" HorizontalAlignment="Left" Margin="17,200,0,0" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="label4" Grid.Column="0" Content="Код ГРНТИ" HorizontalAlignment="Left" Margin="17,231,0,0" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="label5" Grid.Column="0" Content="Дата начала проекта" HorizontalAlignment="Left" Margin="17,262,0,0" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="label6" Grid.Column="0" Content="Дата завершения" HorizontalAlignment="Left" Margin="17,284,0,0" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="label7" Grid.Column="0" Content="Сумма финансирования" HorizontalAlignment="Left" Margin="17,310,0,0" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="label8" Grid.Column="0" Content="Контактные данные" HorizontalAlignment="Left" Margin="17,341,0,0" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" Grid.Column="0" Height="23" Margin="171,30,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" Grid.Column="0" Height="23" Margin="171,58,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox6" Grid.Column="0" Height="23" Margin="171,316,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox7" Grid.Column="0" Height="23" Margin="171,344,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" Grid.Column="0" Visibility="Visible" Margin="171,87,10,0" VerticalAlignment="Top" SelectionChanged="comboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=FIO}">

                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox x:Name="comboBox1" Grid.Column="0" Visibility="Visible" Margin="171,204,10,0" VerticalAlignment="Top" SelectionChanged="comboBox1_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=name_fos}">

                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="button" Content="Сохранить" Grid.Column="0" Margin="151,392,100,0" VerticalAlignment="Top" Height="42" Click="button_Click"/>
        <Button x:Name="button1" Grid.Column="1" Content="Новый автор" Margin="10,87,10,0" VerticalAlignment="Top" Height="22" Click="button1_Click" RenderTransformOrigin="0.5,0.5">

        </Button>
        <Button x:Name="button2" Grid.Column="1" Content="очистить авторов" Margin="10,175,6,0" VerticalAlignment="Top" Click="button2_Click" RenderTransformOrigin="0.5,0.5">

        </Button>
        <ComboBox x:Name="comboBox2" Grid.Column="0" Margin="171,231,10,0" VerticalAlignment="Top" SelectionChanged="comboBox2_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=name_grnti}">

                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <DatePicker Name="datePicker1" Grid.Column="0" Margin="171,258,10,0" VerticalAlignment="Top"/>
        <DatePicker Name="datePicker2" Grid.Column="0" Margin="171,287,10,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
